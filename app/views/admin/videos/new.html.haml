%section.admin_add_video
  .container
    .row
      .span10.offset1
        = bootstrap_form_for [:admin, @video], class: "form-horizontal" do |f|
          %ul.nav.nav-tabs
            %li
              %a(href=" ") Recent Payments
            %li.active
              %a(href="") Add a New Video
          %fieldset
            = f.text_field :title, class: "span3"
            = f.select :category_id, options_for_select(Category.all.map {|cat| [cat.name, cat.id]})
            = f.text_area :description, class: "span6", rows: 8
            = f.file_field :large_cover, class: "btn btn-file"
            = f.file_field :small_cover, class: "btn btn-file"
            = f.text_field :video_link, class: "span6", label: "Video Link"
          %fieldset.actions.control-group
            .controls
              %input(type="submit" value="Add Video" class="btn")