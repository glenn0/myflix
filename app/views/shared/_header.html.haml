%section#top-header.row
  %h1.span2
    = link_to "MyFLiX", home_path
  - if current_user
    %ul.span4.clearfix
      %li= link_to "Videos", home_path
      %li= link_to "My Queue", my_queue_path
      %li= link_to "People"
    = form_tag search_videos_path, class: "span5 for-search" do
      %input.search-query(name="search_term" type="text" placeholder="Search for videos")
      %button.btn(type="submit") Search
    #user_links.pull-right
      %ul
        %li.dropdown
          %a(href="#" id="dlabel" role="button" data-toggle="dropdown" class="dropdown-toggle" data-target="#")
            Welcome, #{current_user.full_name.split.first}
            %b.caret
          %ul.dropdown-menu(role="menu" aria-labelledby="dlabel")
            %li
              %a(href="#") Account
              %a(href="#") Plan and Billing
              %a(href="#") Sign Out